{
    "admin": {
        "listen": "0.0.0.0:2019"
    },
    "apps": {
        "http": {
            "servers": {
                "Cloud_Guardian": {
                    "listen": [
                        ":80"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": [
                                        "/ian90/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "body": "Acceso permitido a ian90"
                                },
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "localhost:8000"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/maria/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "remote_ip",
                                    "deny": [
                                        "2.3.4.5"
                                    ]
                                },
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "localhost:8000"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/api/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "body": "Acceso permitido a /api/*"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/ian1990/*"
                                    ],
                                    "remote_ip": {
                                        "ranges": [
                                            "123.333.222.11",
                                            "111.222.333.33",
                                            "111.111.333.11"
                                        ]
                                    }
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "status_code": 403,
                                    "body": "IP bloqueada"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/ian1990/casa"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "body": "Acceso permitido a /ian1990/casa"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/ian1990/practicas"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "body": "Acceso permitido a /ian1990/practicas"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/ian1990/estudio"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "body": "Acceso permitido a /ian1990/estudio"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/nube/*"
                                    ],
                                    "remote_ip": {
                                        "ranges": [
                                            "111.222.333.44"
                                        ]
                                    }
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "status_code": 403,
                                    "body": "IP bloqueada"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/nube/trabajo"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "static_response",
                                    "body": "Acceso permitido a /nube/trabajo"
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}