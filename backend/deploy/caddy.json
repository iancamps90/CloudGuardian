{
    "admin": {
        "listen": "0.0.0.0:2019"
    },
    "apps": {
        "http": {
            "servers": {
                "Cloud_Guardian_App": {
                    "listen": [
                        ":80"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": [
                                        "/static/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "/home/despliegue-nube/cloudguardian/backend/staticfiles"
                                }
                            ]
                        },
                        {
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": ":8000"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "Host": [
                                                    "{http.request.host}"
                                                ],
                                                "X-Real-IP": [
                                                    "{http.request.remote_ip}"
                                                ],
                                                "X-Forwarded-For": [
                                                    "{http.request.remote_ip}"
                                                ],
                                                "X-Forwarded-Proto": [
                                                    "{http.request.scheme}"
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}